                        </StackPanel>
                    </Border>
                    <!-- /Exemplo de cartão -->
                    
                </StackPanel>
                <!-- /Cartões da parte superior da tela -->

                <Separator Grid.Row="1" Margin="10, 0" />

                <StackPanel Grid.Row="2">
                    <TextBlock Margin="20" FontSize="16" FontWeight="DemiBold">Título da galeria de imagens</TextBlock>

                    <!-- Imagens da galeira dentro desse painel dentro desse painel -->
                    <StackPanel Orientation="Horizontal">
                        
                        <!-- Cada StackPanel abaixo é uma imagem com descrição -->
                        
                        <StackPanel>
                            <Border VerticalAlignment="Top" BorderThickness="1" BorderBrush="Black" Margin="10, 10, 10, 0">
                                <Image Source="Images\image1.jpg" Stretch="UniformToFill" />
                            </Border>
                            <TextBlock FontStyle="Italic" FontSize="12" Margin="10, 0, 0, 0">Deusa prateada questionando</TextBlock>
                        </StackPanel>

                        <StackPanel>
                            <Border VerticalAlignment="Top" BorderThickness="1" BorderBrush="Black" Margin="10, 10, 10, 0">
                                <Image Source="Images\image2.jpg" Stretch="UniformToFill" />
                            </Border>
                            <TextBlock FontStyle="Italic" FontSize="12" Margin="10, 0, 0, 0">Deusa prateada supremacy</TextBlock>
                        </StackPanel>

                        <StackPanel>
                            <Border VerticalAlignment="Top" BorderThickness="1" BorderBrush="Black" Margin="10, 10, 10, 0">
                                <Image Source="Images\image3.jpg" Stretch="UniformToFill" />
                            </Border>
                            <TextBlock FontStyle="Italic" FontSize="12" Margin="10, 0, 0, 0">Deusa prateada desanimada</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <!-- /Imagens da galeira dentro desse painel dentro desse painel -->
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
